{% extends 'base.html.twig' %}

{% block title %}Budget index{% endblock %}

{% block body %}
    <h1>Budget index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Price</th>
                <th>CandidateName</th>
                <th>CandidateEmail</th>
                <th>CandidatePhone</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for budget in budgets %}
            <tr>
                <td>{{ budget.id }}</td>
                <td>{{ budget.price }}</td>
                <td>{{ budget.candidateName }}</td>
                <td>{{ budget.candidateEmail }}</td>
                <td>{{ budget.candidatePhone }}</td>
                <td>
                    <a href="{{ path('budget_show', {'id': budget.id}) }}">show</a>
                    <a href="{{ path('budget_edit', {'id': budget.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('budget_new') }}">Create new</a>
{% endblock %}
